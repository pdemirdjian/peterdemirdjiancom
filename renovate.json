{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": ["@pdemirdjian"],
  "extends": [
    "config:recommended",
    "npm:unpublishSafe",
    "helpers:pinGitHubActionDigestsToSemver",
    ":configMigration",
    ":pinDevDependencies",
    "abandonments:recommended",
    ":pinAllExceptPeerDependencies",
    "workarounds:typesNodeVersioning"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "recreateWhen": "always",
    "rebaseWhen": "behind-base-branch",
    "branchTopic": "lock-file-maintenance",
    "commitMessageAction": "Lock file maintenance",
    "minimumReleaseAge": "3d",
    "prBodyDefinitions": {"Change": "All locks refreshed"}
  },
  "major": {
    "automerge": false,
    "automergeType": "branch",
    "prBodyDefinitions": {"Change": "Major version update"}
  },
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "minimumReleaseAge": "3d",
      "matchDatasources": [
        "npm"
      ],
      "matchPackageNames": [
        "vite",
        "**vite-plugin**",
        "@vitejs/**"
      ]
    },
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "minimumReleaseAge": "3d"
    },
    {
      "description": "Auto-update Node.js version in .nvmrc",
      "matchManagers": ["nvm"],
      "matchPackageNames": ["node"],
      "automerge": true,
      "minimumReleaseAge": "7d"
    },
    {
      "description": "Auto-update pnpm version in package.json",
      "matchManagers": ["npm"],
      "matchPackageNames": ["pnpm"],
      "automerge": true,
      "minimumReleaseAge": "7d"
    }
  ],
  "vulnerabilityAlerts": {
    "automerge": true,
    "assignees": ["@pdemirdjian"],
    "labels": ["security"],
    "minimumReleaseAge": "0d"
  },
  "osvVulnerabilityAlerts": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "npm": {
    "minimumReleaseAge": "3d"
  }
}
