{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "@pdemirdjian"
  ],
  "extends": [
    ":configMigration",
    ":enablePreCommit",
    ":pinAllExceptPeerDependencies",
    ":pinDevDependencies",
    "abandonments:recommended",
    "config:best-practices",
    "group:nodeJs",
    "group:vite",
    "group:vuepressMonorepo",
    "helpers:pinGitHubActionDigestsToSemver",
    "security:minimumReleaseAgeNpm",
    "security:openssf-scorecard",
    "workarounds:typesNodeVersioning"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Trivy version in GitHub Actions workflows",
      "fileMatch": [
        "^\\.github/workflows/[^/]+\\.ya?ml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=github-releases\\s+depName=aquasecurity/trivy\\n\\s*version:\\s*['\"]?(?<currentValue>v?[\\d.]+)['\"]?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "aquasecurity/trivy"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "recreateWhen": "always",
    "rebaseWhen": "behind-base-branch",
    "branchTopic": "lock-file-maintenance",
    "commitMessageAction": "Lock file maintenance",
    "minimumReleaseAge": "3d",
    "prBodyDefinitions": {
      "Change": "All locks refreshed"
    }
  },
  "major": {
    "automerge": false,
    "automergeType": "branch",
    "prBodyDefinitions": {
      "Change": "Major version update"
    },
    "minimumReleaseAge": "7d"
  },
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "minimumReleaseAge": "3d"
    },
    {
      "description": "Keep VuePress packages in sync to avoid peer dependency issues",
      "groupName": "VuePress",
      "automerge": false,
      "minimumReleaseAge": "7d",
      "matchPackageNames": [
        "/^vuepress$/",
        "/^@vuepress//"
      ]
    },
    {
      "description": "Keep TypeScript ESLint packages in sync",
      "groupName": "TypeScript ESLint",
      "automerge": true,
      "minimumReleaseAge": "3d",
      "matchPackageNames": [
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser"
      ]
    },
    {
      "description": "Auto-update pnpm version in package.json",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "pnpm"
      ],
      "automerge": true,
      "minimumReleaseAge": "3d"
    },
    {
      "description": "Update Node.js version in .nvmrc and .node-version",
      "matchFileNames": [
        ".nvmrc",
        ".node-version"
      ],
      "matchPackageNames": [
        "node"
      ],
      "enabled": true
    }
  ],
  "vulnerabilityAlerts": {
    "automerge": true,
    "assignees": [
      "@pdemirdjian"
    ],
    "labels": [
      "security"
    ],
    "minimumReleaseAge": "0d"
  },
  "osvVulnerabilityAlerts": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "minimumReleaseAge": "3d",
  "npm": {
    "minimumReleaseAge": "3d"
  }
}
