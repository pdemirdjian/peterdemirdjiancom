{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "@pdemirdjian"
  ],
  "extends": [
    ":configMigration",
    ":enablePreCommit",
    ":pinAllExceptPeerDependencies",
    ":pinDevDependencies",
    "abandonments:recommended",
    "config:best-practices",
    "group:nodeJs",
    "group:vite",
    "group:vuepressMonorepo",
    "helpers:pinGitHubActionDigestsToSemver",
    "npm:unpublishSafe",
    "security:openssf-scorecard",
    "workarounds:typesNodeVersioning"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "recreateWhen": "always",
    "rebaseWhen": "behind-base-branch",
    "branchTopic": "lock-file-maintenance",
    "commitMessageAction": "Lock file maintenance",
    "minimumReleaseAge": "3d",
    "prBodyDefinitions": {
      "Change": "All locks refreshed"
    }
  },
  "major": {
    "automerge": false,
    "automergeType": "branch",
    "prBodyDefinitions": {
      "Change": "Major version update"
    },
    "minimumReleaseAge": "7d"
  },
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "minimumReleaseAge": "3d"
    },
    {
      "description": "Keep VuePress packages in sync to avoid peer dependency issues",
      "groupName": "VuePress",
      "automerge": false,
      "minimumReleaseAge": "7d",
      "matchPackageNames": [
        "/^vuepress$/",
        "/^@vuepress//"
      ]
    },
    {
      "description": "Auto-update pnpm version in package.json",
      "matchManagers": [
        "npm"
      ],
      "matchPackageNames": [
        "pnpm"
      ],
      "automerge": true,
      "minimumReleaseAge": "3d"
    }
  ],
  "vulnerabilityAlerts": {
    "automerge": true,
    "assignees": [
      "@pdemirdjian"
    ],
    "labels": [
      "security"
    ],
    "minimumReleaseAge": "0d"
  },
  "osvVulnerabilityAlerts": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "minimumReleaseAge": "3d",
  "npm": {
    "minimumReleaseAge": "3d"
  }
}
