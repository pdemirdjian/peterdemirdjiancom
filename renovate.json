{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "npm:unpublishSafe"],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateWhen": "always",
    "rebaseWhen": "behind-base-branch",
    "branchTopic": "lock-file-maintenance",
    "commitMessageAction": "Lock file maintenance",
    "prBodyDefinitions": {"Change": "All locks refreshed"}
  },
  "packageRules": [
    {"matchUpdateTypes": ["minor", "patch", "pin", "digest"], "automerge": true}
  ],
  "major": {
    "automerge": false,
    "automergeType": "branch",
    "prBodyDefinitions": {"Change": "Major version update"}
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true,
    "assignees": ["@pdemirdjian"]
  }
}
