{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve"
  },
  "include": ["docs/.vuepress/**/*.ts", "docs/.vuepress/**/*.vue", "*.ts"],
  "exclude": [
    "node_modules",
    "docs/.vuepress/dist",
    "docs/.vuepress/.cache",
    "docs/.vuepress/.temp",
    "test-results",
    "playwright-report"
  ]
}
